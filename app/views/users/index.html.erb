

<section class="container mx-auto p-6 font-mono">
  <div class="w-full mb-8 overflow-hidden rounded-lg shadow-lg">
    <!--Search Bar-->
    <%= render 'search_form'  %>
<!-- Button to trigger modal -->
<button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded my-4" id="new-user-button">Add New User</button>

<!-- Modal -->
<div id="new-user-modal" class="fixed z-10 inset-0 overflow-y-auto hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>

    <!-- Modal content -->
    <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
      <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
        <div class="sm:flex sm:items-start">
          <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
            <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">New User</h3>
            <div class="mt-2">
              <%= render 'form', user: @user, method: :post %>
                  <button id="close-user-modal-button" class="mt-4 bg-red-500 text-white px-4 py-2 rounded">Close</button>

            </div>
          </div>
        </div>
      </div>


      <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">      </div>
    </div>
  </div>
</div>
  <div class="w-full overflow-x-auto">
  <div id="search_results">
        <%= render 'search_results', users: @users %>  
    </div>
  </div>
</section>
